# ====================================
# FEMOTTA - Enterprise Configuration
# ====================================
# Copy this file to .env and fill with your values
# NEVER commit .env to version control

# ====================================
# DATABASE
# ====================================
DATABASE_URL=postgresql://user:password@host:5432/database

# ====================================
# EXTERNAL APIs
# ====================================
# Wavespeed API for AI image editing
WAVESPEED_API_KEY=your_wavespeed_api_key_here

# OpenAI API for GPT-4 and ML analysis
OPENAI_API_KEY=your_openai_api_key_here

# ====================================
# SECURITY & AUTHENTICATION
# ====================================
# JWT secret for token signing (use a strong random value)
# Generate with: openssl rand -base64 64
JWT_SECRET=your_secure_random_jwt_secret_minimum_32_characters

# Admin secret for admin authentication (use a strong random value)
ADMIN_SECRET=your_secure_random_admin_secret_minimum_32_characters

# JWT token expiration (default: 24h)
JWT_EXPIRY=24h

# Bcrypt salt rounds (default: 10, higher = more secure but slower)
BCRYPT_ROUNDS=10

# ====================================
# GOOGLE DRIVE (OAuth 2.0)
# ====================================
# Google OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Default Google Drive folder ID for assets (optional)
GOOGLE_DRIVE_ASSETS_FOLDER_ID=your_default_folder_id

# ====================================
# SERVER CONFIGURATION
# ====================================
# Server port
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# API base URL
API_BASE_URL=http://localhost:3000

# Client URL for CORS
CLIENT_URL=http://localhost:5000

# ====================================
# RATE LIMITING
# ====================================
# Maximum requests per window per IP
RATE_LIMIT_MAX=100

# Time window in minutes
RATE_LIMIT_WINDOW=15

# ====================================
# FILE UPLOAD LIMITS
# ====================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=50

# Maximum number of files per upload
MAX_FILES_PER_UPLOAD=20

# ====================================
# LOGGING
# ====================================
# Log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# Enable pretty logging in development
LOG_PRETTY=true

# ====================================
# MONITORING & PERFORMANCE
# ====================================
# Enable performance monitoring
ENABLE_MONITORING=true

# Enable detailed error logging
ENABLE_ERROR_DETAILS=true

# ====================================
# REPLIT SPECIFIC (Legacy - Remove in production)
# ====================================
# These are only needed if running on Replit
# REPLIT_CONNECTORS_HOSTNAME=
# REPL_IDENTITY=
# WEB_REPL_RENEWAL=
